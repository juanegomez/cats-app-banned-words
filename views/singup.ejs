<!-- Include components -->
<%- include('./partials/head.ejs') %>
<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Account Register
            </div>
            <br>
            <div class="card-body">
                <form action="create-user" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <div id="firstNameMessage"></div>
                        <input type="text" class="form-control" name="firstName" placeholder="First name" id="firstName">
                    </div>
                    <br>
                    <div class="form-group">
                        <div id="lastNameMessage"></div>
                        <input type="text" class="form-control" name="lastName" placeholder="Last name" id="lastName">
                    </div>
                    <br>
                    <div class="form-group">
                        <div id="emailMessage"></div>
                        <input type="email" class="form-control" name="email" placeholder="Email" id="email">
                    </div>
                    <br>
                    <div class="form-group">
                        <div id="passwordMessage"></div>
                        <input type="password" class="form-control" name="password" placeholder="Password" id="password">
                    </div>
                    <br>
                    <div class="form-group">
                        <div id="confirmPasswordMessage"></div>
                        <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm password" id="confirmPassword">
                    </div>
                    <br>
                    <div class="form-group">
                        <div id="birthdateMessage"></div>
                        <p>Birthdate :</p>
                        <input type="date" class="form-control" name="birthdate" id="birthdate">
                    </div>
                    <br>
                    <div class="form-group">
                        <div id="imageMessage"></div>
                        <label>profile image: </label>
                        <input type="file" name="image" accept="image/png, image/jpeg" id="profileImage">
                    </div>
                    <br>
                    <button class="btn btn-primary btn-block">
                        singUp
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="validation.js"></script>
<%- include('./partials/foot.ejs') %>